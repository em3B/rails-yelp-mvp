<div class="navbar">
  <h1 id="home"><%= link_to "My Restaurants", restaurants_path %></h1>
  <h2 id="new-restaurant"><%= link_to "New Restaurant", new_restaurant_path %></h2>
</div>
<h1>My Restaurants</h1>
<% @restaurants.each do |restaurant| %>
  <h1><%= link_to restaurant.name, restaurant_path(restaurant.id) %></h1>
  <h2><%=  restaurant.category %></h2>
  <p><%= restaurant.address %></p>
<% end %>
